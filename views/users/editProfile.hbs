<div class="container-xl px-4 mt-4">
  <hr class="mt-0 mb-4" />
  <div class="row">
    <div class="col-xl-4">
      <!-- Profile picture card-->
      <div class="card mb-4 mb-xl-0">
        <div class="card-header">Profile Picture</div>
        <div class="card-body text-center">
          <!-- Profile picture image-->
          <img
            class="img-account-profile rounded-circle mb-2"
            src="{{user.profilePic}}"
            alt=""
          />
          <!-- Profile picture help block-->
          <div class="small font-italic text-muted mb-4">JPG or PNG no larger
            than 5 MB</div>
          <!-- Profile picture upload button-->
          <form
            class="d-flex flex-column justify-content-center"
            action="/profile/edit"
            method="post"
            enctype="multipart/form-data"
          >
            <input class="form-control" type="file" name="profilePic" />
            <button class="btn btn-light" type="submit">Upload new image</button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-xl-8">
      <!-- Account details card-->
      <div class="card mb-4">
        <div class="card-header">Account Details</div>
        <div class="card-body">
          <form action="/profile/edit"
            method="post"
            enctype="multipart/form-data">
            <!-- Form Row-->
            <div class="row gx-3 mb-3">
              <!-- Form Group (first name)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputFirstName">First name</label>
                <input
                  class="form-control"
                  name="name"
                  id="inputFirstName"
                  type="text"
                  placeholder="{{user.name}}"
                  value="{{user.name}}"
                />
              </div>
              <!-- Form Group (last name)-->
              <div class="col-md-6">
                <label class="small mb-1" for="inputLastName">Last name</label>
                <input
                  class="form-control"
                  id="inputLastName"
                  name="lastName"
                  type="text"
                  placeholder="{{user.lastName}}"
                  value="{{user.lastName}}"
                />
              </div>
            </div>
            <!-- Form Row        -->
            <div class="row gx-3 mb-3">
            <!-- Form Group (email address)-->
            <div class="col-md-6 mb-3">
              <label class="small mb-1" for="inputEmailAddress">Email address</label>
              <input
                class="form-control"
                id="inputEmailAddress"
                type="email"
                name="email"
                placeholder="Enter your email address"
                value="{{user.email}}"
              />
            </div>
            <div class="col-md-6 mb-3">
              <label class="small mb-1" for="inputPassword">Password</label>
              <input
                class="form-control"
                id="inputEmailAddress"
                type="password"
                name="password"
                placeholder="Change your password"
                value=""
              />
            </div>
            
            <!-- Form Row-->
            <div class="row gx-3 mb-3">
             
            <!-- Save changes button-->
            <div>
            <button class="btn btn-light mb-3" type="submit">Save changes</button>
            </div>
            <div>
            <a href="/profile"><button class="btn btn-dark" type="button">Cancel</button></a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>